{
    "name": "jasperro-website",
    "version": "1.0.0",
    "description": "Jasper Albering's personal website, built with eleventy",
    "scripts": {
        "start": "pnpm run dev",
        "dev": "pnpm run clean & NODE_ENV=development run-p gulp:dev postcss:dev",
        "build": "pnpm run clean & NODE_ENV=production run-s gulp:build eleventy:build postcss:build",
        "gulp:dev": "gulp dev",
        "gulp:build": "gulp build",
        "postcss:dev": "NODE_ENV=development TAILWIND_MODE=watch postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css -w",
        "postcss:build": "NODE_ENV=production postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css",
        "eleventy:build": "ELEVENTY_ENV=production eleventy",
        "clean": "del-cli dist/**"
    },
    "repository": {
        "type": "git",
        "url": "http://github.com/jasperro/jasperro-website"
    },
    "author": "Jasper Albering",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-img": "^0.10.0",
        "@11ty/eleventy-navigation": "^0.3.2",
        "@11ty/eleventy-plugin-rss": "^1.1.1",
        "@tailwindcss/forms": "^0.3.3",
        "@tailwindcss/typography": "^0.4.1",
        "autoprefixer": "^10.3.3",
        "cssnano": "^5.0.8",
        "cssnano-preset-advanced": "^5.1.4",
        "dayjs": "^1.10.6",
        "del-cli": "^4.0.1",
        "gulp": "^4.0.2",
        "gulp-favicons": "^3.0.0",
        "gulp-svg-sprite": "^1.5.0",
        "html-minifier": "^4.0.0",
        "inter-ui": "^3.19.3",
        "lodash": "^4.17.21",
        "markdown-it": "^12.2.0",
        "mini-css-extract-plugin": "^2.2.0",
        "node-fetch": "^2.6.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.6",
        "postcss-preset-env": "^6.7.0",
        "tailwindcss": "^2.2.9"
    }
}
