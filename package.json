{
    "name": "jasperro-website",
    "version": "1.0.0",
    "description": "Jasper Albering's personal website, built with eleventy",
    "scripts": {
        "start": "pnpm run dev",
        "dev": "pnpm run clean & NODE_ENV=development run-p gulp:dev postcss:dev",
        "build": "pnpm run clean & NODE_ENV=production run-s gulp:build eleventy:build postcss:build",
        "gulp:dev": "gulp dev",
        "gulp:build": "gulp build",
        "postcss:dev": "NODE_ENV=development TAILWIND_MODE=watch postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css -w",
        "postcss:build": "NODE_ENV=production postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css",
        "eleventy:build": "ELEVENTY_ENV=production eleventy",
        "clean": "del-cli dist/**"
    },
    "repository": {
        "type": "git",
        "url": "http://github.com/jasperro/jasperro-website"
    },
    "author": "Jasper Albering",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^2.0.0-canary.12",
        "@11ty/eleventy-img": "^2.0.1",
        "@11ty/eleventy-navigation": "^0.3.3",
        "@11ty/eleventy-plugin-rss": "^1.2.0",
        "@fontsource/lexend": "^4.5.10",
        "@tailwindcss/forms": "^0.4.0",
        "@tailwindcss/typography": "^0.5.0",
        "autoprefixer": "^10.4.0",
        "cssnano": "^5.0.12",
        "cssnano-preset-advanced": "^5.1.8",
        "dayjs": "^1.10.7",
        "del-cli": "^4.0.1",
        "eleventy-plugin-svg-sprite": "^1.2.2",
        "gulp": "^4.0.2",
        "gulp-favicons": "^3.0.0",
        "gulp-svg-sprite": "^1.5.0",
        "html-minifier": "^4.0.0",
        "lodash": "^4.17.21",
        "markdown-it": "^12.3.0",
        "mini-css-extract-plugin": "^2.4.5",
        "node-fetch": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "postcss-import": "^14.0.2",
        "postcss-preset-env": "^7.0.1",
        "tailwindcss": "^3.0.2"
    }
}
