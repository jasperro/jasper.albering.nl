layout: base
_no_margin: true
eleventyNavigation:
order: -999
---
<div class="bg-bgel my-16 p-[clamp(theme(spacing.4),4vw,theme(spacing.32))] flex flex-col">
    <div class="flex-col justify-between w-full">
        <span class="flex flex-wrap-reverse justify-between 2xl:justify-start items-center">
            <h1 class="text-9xl leading-snug flex font-medium tracking-tighter text-primary">{{ home[locale].title | safe }}</h1>
            {% icon 'logo', 'flex w-[clamp(6rem,25vw,10rem)] h-[clamp(6rem,25vw,10rem)] 2xl:ml-8' %}
        </span>
        <span class="text-base block my-12 space-y-4">{{ home[locale].info | safe }}</span>
        <div class="flex flex-wrap mt-6 gap-2 sm:p-4 p-2 w-max max-w-full sm:rounded-sm sm:shadow-md bg-bg bg-opacity-50">
            <a href="#projects"
               class="text-sm flex items-center py-3 px-5 sm:w-max w-full font-medium rounded-sm bg-yellow-300 text-black shadow-sm">Portfolio</a>
            <a href="#contact"
               class="text-sm flex items-center py-3 px-5 sm:w-max w-full justify-between font-medium rounded-sm bg-green-300 text-black shadow-sm">Contact&nbsp;
            {% icon 'email' %}</a>
            <a href="https://github.com/jasperro"
               class="flex items-center py-3 px-3 w-max font-medium rounded-sm bg-gray-800 text-white shadow-sm">
            {% icon 'github' %}</a>
        </div>
    </div>
