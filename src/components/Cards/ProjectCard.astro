---
import Image from "@src/components/Image.astro";
import { Sprite } from "@src/components/Icons";

const { title, description, imgUrl, icons = [], actioncomponent } = Astro.props;
---

<div
    class="transition-shadow rounded-sm shadow-sm hover:shadow-xl bg-bgel dark:bg-bgel-dark p-5 flex justify-between flex-col"
>
    <div>
        {
            imgUrl ? (
                <Image classes="h-48 object-cover" src={imgUrl} alt={title} />
            ) : (
                ""
            )
        }
    </div>

    <p class="font-semibold text-xl pt-6">{title}</p>
    <p class="pt-2 text-base">{description}</p>
    <div class="flex mt-4 justify-between">
        <div class="mt-2 flex items-center">
            {icons.map((i: string) => <Sprite name={i} />)}
        </div>
        <div class="mt-2">
            {
                actioncomponent
                    ? ((ActionComponent) => (
                          <ActionComponent {...actioncomponent[1]} />
                      ))(actioncomponent[0])
                    : null
            }
        </div>
    </div>
</div>
