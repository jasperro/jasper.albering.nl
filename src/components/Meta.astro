---
import * as consts from '@src/lib/consts';
import logoSVG from '@src/icons/logo.svg';
import { removeTrailingSlash } from '@src/lib/urlhelpers';
export interface Props {
	title?: string;
	shortTitle?: string;
	description?: string;
	canonicalURL: URL;
}

const {
	title,
	shortTitle,
	description,
	canonicalURL = removeTrailingSlash(Astro.url.href),
} = Astro.props;

const metaTitle = shortTitle ?? title;
---

<!--General -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="canonical" href={canonicalURL} />

<!-- Preloads -->
<link
	rel="preload"
	as="font"
	href={(
		await import(
			'node_modules/@fontsource-variable/lexend/files/lexend-latin-wght-normal.woff2'
		)
	).default}
	type="font/woff2"
	crossorigin="anonymous"
/>

<title>
	{metaTitle ? `${metaTitle} | ${consts.SITE_TITLE}` : consts.SITE_TITLE}
</title>
<meta
	name="description"
	content={description
		? description
		: metaTitle
			? `${metaTitle} | ${consts.SITE_DESCRIPTION}`
			: ''}
/>

<!-- OpenGraph -->
<meta property="og:site_name" content={consts.SITE_TITLE} />
<meta property="og:title" content={title && consts.SITE_TITLE} />
<meta property="og:description" content={consts.SITE_DESCRIPTION} />

<meta name="application-name" content={consts.SITE_TITLE} />
<meta name="apple-mobile-web-app-title" content={consts.SITE_TITLE} />

<!-- Favicons -->
<link rel="icon" type="image/svg+xml" href={logoSVG.src} />

<link rel="shortcut icon" href="/assets/images/favicon/favicon.ico" />
<link
	rel="icon"
	type="image/png"
	sizes="16x16"
	href="/assets/images/favicon/favicon-16x16.png"
/>
<link
	rel="icon"
	type="image/png"
	sizes="32x32"
	href="/assets/images/favicon/favicon-32x32.png"
/>
<link
	rel="icon"
	type="image/png"
	sizes="48x48"
	href="/assets/images/favicon/favicon-48x48.png"
/>
<link rel="manifest" href="/assets/images/favicon/manifest.json" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="theme-color" content="#007a72" />
<meta name="application-name" content={title && consts.SITE_TITLE} />
<link
	rel="apple-touch-icon"
	sizes="57x57"
	href="/assets/images/favicon/apple-touch-icon-57x57.png"
