---
import Meta from "@src/components/Meta.astro";
import Header from "@src/components/Header.astro";
import { SpriteProvider } from "astro-icon";
import "@src/styles/main.pcss";
import SocialLinks from "@src/components/SocialLinks.astro";

const canonicalURL = new URL(Astro.url);
const { content = {} } = Astro.props;
---

<head>
    <Meta {content} {canonicalURL} />
</head>

<body class="min-h-screen flex flex-col">
    <SpriteProvider>
        <Header />

        <main
            id="main"
            class="flex flex-col flex-grow lg:p-16 md:p-8 p-4 overflow-hidden"
            tabindex="-1"
        >
            <slot />
        </main>

        <footer
            class="px-8 flex flex-grow-0 justify-between items-center py-4 bg-bgel text-sm mt-16"
            role="contentinfo"
        >
            <div>Jasper Albering &copy; 2016-2021</div>
            <span class="flex gap-x-2">
                <SocialLinks />
            </span>
        </footer>
    </SpriteProvider>
</body>
