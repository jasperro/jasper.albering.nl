{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["esnext", "DOM"],
		"jsx": "preserve",
		"moduleResolution": "bundler",
		"module": "esnext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": ["vite/client", "astro/env"],
		"baseUrl": "./",
		"paths": {
			"@src/*": ["./src/*"],
			"node_modules/*": ["./node_modules/*"]
		},
		"outDir": "./dist"
	}
}
