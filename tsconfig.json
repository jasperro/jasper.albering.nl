{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["esnext", "DOM"],
		"moduleResolution": "node",
		"module": "esnext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": ["vite/client", "astro/env", "astro/client"],
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src/*"]
		},
		"outDir": "./dist"
	}
}
